{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true, // allow any
    "module": "ESNext", // allow specs
    "target": "ES5", // specs for compile
    "jsx": "react-jsx", // react tsx/jsx
    "allowJs": true, // can use js and ts
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true, // common js as packet require
    "allowSyntheticDefaultImports": true, // import * as to default import,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "lib": [
      "ES2020",
      "DOM",
    ],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "strictNullChecks": true
    }
  }
}